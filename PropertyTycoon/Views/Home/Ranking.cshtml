@model List<DataLayer.PointsEarned>

@{
    ViewBag.Title = "Ranking";
}

<h2>Ranking</h2>

@if (Model.Count == 0)
{
    <p>
        No Transaction History Available. Get started by @Html.ActionLink("creating a new transaction", "CreateTransaction") today!
    </p>
}

else
{

    <table>
        <tr>
            <th>Ranking</th>
            <th>Player</th>
            <th>Points</th>
        </tr>

        @for (int i = 0; i < Model.Count; ++i)
        {
            var pe = Model[i];

            <tr>
                <td><a href="Transaction/@t.Id">@(i + 1)</a></td>
                <td><a href="Transaction/@t.Id">@pe.User.UserName</a></td>
                <td><a href="Transaction/@t.Id">@pe.Points</a></td>
            </tr>

        }
    </table>
            }