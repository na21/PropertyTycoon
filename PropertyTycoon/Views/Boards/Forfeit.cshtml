@model DataLayer.Board

@{
    ViewBag.Title = "Forfeit";
}

@if (Model.Status == "Active")
{
    <h2>Forfeit</h2>

    <h3>Are you sure you want to forfeit this game?</h3>
    <div>
        <h4>Board</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MaximumPlayers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaximumPlayers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.minSkillRange)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.minSkillRange)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.maxSkillRange)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.maxSkillRange)
            </dd>

        </dl>


        <div class="form-actions no-color">

            @using (Html.BeginForm("Forfeit", "Boards", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" name="id" value="@Model.Id">
                <button type="submit" name="button" value="Forfeit">Forfeit</button>
            }


            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}

else if (Model.Status == "New")
{
    <h2>Error</h2>
    <p>
        Game has not started yet. New games may be deleted by choosing the appropriate option at the game listing screen.
    </p>
    <br />
    <p>Click @Html.ActionLink("here", "Index") to return to game listing.</p>
}

else
{
    <h2>Error</h2>
    <p>Game has already completed and cannot be forfeit.</p>
    <br />
    <p>Click @Html.ActionLink("here", "Index") to return to game listing. </p>
}